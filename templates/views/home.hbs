{{> header }}
<main 
    class="flex items-center justify-center flex-col h-screen " 
    id="play_container"
>
    <header class="mb-9 flex flex-col items-center">
        <h2 class="text-white text-3xl font-semibold tracking-wide ">
            song of the day
        </h2>
        <p class="text-white text-sm italic mt-3">{{{date}}}</p>
    </header>
    <section class="grid gap-4 grid-cols-1 md:grid-cols-2 md:grid-rows-2">
        <figure class="flex items-center flex-col  md:row-span-2 ">
            <img src="{{{coverArt}}}" class="w-auto h-72 xs:h-96  border-white border-2 rounded-md " id="cover_art">               
        </figure>
        <div class="flex flex-col text-center pt-[55px] gap-5">
            <audio class="hidden" src="{{{preview}}}"></audio>
            <figcaption 
                id="song_name" 
                class="text-white text-2xl max-w-sm"
            >
                {{{songName}}}
            </figcaption>
            <figcaption id="artist_name" class="text-white text-xl">
                {{{artistName}}}
            </figcaption>
        </div>       
        {{#if preview}}
            <article class="flex flex-col items-center gap-4">
                <i class="fa-solid fa-play text-white text-3xl p-4 border-2 border-white rounded-full outline-offset-4 cursor-pointer flex items-center justify-center transform transition duration-250 hover:scale-110" 
                id="play_pause"
                >
                    <audio id="audio" src="{{{preview}}}"></audio>
                </i>
                <div class="w-9/12 flex justify-center items-center gap-2">
                    <span id="current_time" class="time text-white">
                        0.00
                    </span>
                    <input 
                        class="w-3/5 rounded-md"
                        type="range"
                        id="seek_slider"
                        min="1"
                        max="100"
                        value="0"
                    >
                    <span id="duration" class="time text-white">
                        0.00
                    </span>
                </div>
                <div class="w-9/12 flex justify-center items-center gap-2">
                    <i class="fa fa-volume-down"></i>
                    <input 
                        class="w-1/3 rounded-md"
                        type="range"
                        id="volume_slider"
                        max="100"
                        value="100"
                    >
                    <i class="fa fa-volume-up"></i>
                </div>
            </article>
        {{else}}  
            <article class="flex flex-col items-center gap-4">
                <i class="fa-solid fa-play hidden text-white text-3xl p-4 border-2 border-white rounded-full outline-offset-4 cursor-pointer items-center justify-center transform transition duration-250 hover:scale-110" 
                id="play_pause"
                >
                    <audio id="audio" src="{{{preview}}}"></audio>
                </i>
                <div class="w-9/12 hidden justify-center items-center gap-2">
                    <span id="current_time" class="time text-white">
                        0.00
                    </span>
                    <input 
                        class="w-3/5 rounded-md"
                        type="range"
                        id="seek_slider"
                        min="1"
                        max="100"
                        value="0"
                    >
                    <span id="duration" class="time text-white">
                        0.00
                    </span>
                </div>
                <div class="w-9/12 hidden justify-center items-center gap-2">
                    <i class="fa fa-volume-down"></i>
                    <input 
                        class="w-1/3 rounded-md"
                        type="range"
                        id="volume_slider"
                        max="100"
                        value="100"
                    >
                    <i class="fa fa-volume-up"></i>
                </div>
                <h3 class="text-white text-xl">no preview available...</h3>
            </article>
        {{/if}}
    </section>
</main>
{{> footer }}

<script src="js/app-bundle.js" rel="text/javascript" defer></script>